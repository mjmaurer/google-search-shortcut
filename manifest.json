{
  "manifest_version": 2,

  "name": "Google Search Shortcut",
  "description": "Lets you click on bolded snippets to load the web page and find them immediately in the result",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["*://www.google.com/*"],
      "js": ["on-search-page.js"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["find-text-event.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "tabs", "*://*/*"
  ]
}